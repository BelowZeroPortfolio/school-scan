{
    "name": "attendance/barcode-system",
    "description": "Barcode-based student attendance tracking system",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-gd": "*",
        "picqer/php-barcode-generator": "^2.4",
        "phpmailer/phpmailer": "^6.8",
        "twilio/sdk": "^7.0",
        "tecnickcom/tcpdf": "^6.6",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "files": [
            "config/config.php",
            "includes/db.php",
            "includes/csrf.php",
            "includes/functions.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
